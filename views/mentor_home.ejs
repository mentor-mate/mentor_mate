<body class="w3-light-grey" background="">
<img src="/w3images/bridge.jpg" alt="Norway" style="width:100%">

<!-- w3-content defines a container for fixed size centered content, 
and is wrapped around the whole page content, except for the footer in this example -->
<div class="w3-content" style="max-width:1400px">

<!-- Header -->
<header class="w3-container w3-center w3-padding-32"> 
  <h1><b>MENTOR MATE</b></h1>
  <p>Ask any question to your <span class="w3-tag">Teachers</span></p>
</header>

<!-- Grid -->
<div class="w3-row">

<!-- Blog entries -->
<div class="w3-col l8 s12">
  <!-- Blog entry -->
  <% for(let i = 0 ; i < data.length ; i++){ 
        if (data[i].prof == username){  %>
        <div class="w3-card-4 w3-margin w3-white">
        <!-- <img src="/w3images/woods.jpg" alt="Nature" style="width:100%"> -->
          <div class="w3-container">
            <h3><b><%= data[i].question %></b></h3>
            <h5><a href="/api/mentor/home/student/<%= data[i].username %>"><%= data[i].username %></a> <span class="w3-opacity">April 7, 2014</span></h5>
          </div>
          
          <div class="w3-container">
            <div id="textbox">
              
            </div>
            <div class="w3-row">
              <div class="w3-col m8 s12">
                <p><a href= "/api/mentor/home/<%= data[i].id %>"><button class="w3-button w3-padding-large w3-white w3-border"><b>Add Solution »</b></button></a></p>
              </div>
              <div class="w3-col m4 w3-hide-small">
                <p><span class="w3-padding-large w3-right"><b>Comments  </b> <span class="w3-tag">0</span></span></p>
              </div>
            </div>
          </div>
        </div>
  <%    }
    } %>
  
  <hr>

</div>

<!-- Introduction menu -->
<div class="w3-col l4">
  <!-- About Card -->
  <a href="/api/mentor/user/">
  <div class="w3-card w3-margin w3-margin-top">
  <img src="/w3images/avatar_g.jpg" style="width:100%">
    <div class="w3-container w3-white">
      <h4 id="user"><b><%= username %></b></h4>
      <p> I want to share my world with you.</p>
    </div>
    <span class="w3-tag"><a href="/api/mentor/logout/">Logout</a></span>
  </div></a><hr>
  
  
<!-- END Introduction Menu -->
</div>

<!-- END GRID -->
</div><br>

<!-- END w3-content -->
</div>

<!-- Footer -->
<footer class="w3-container w3-dark-grey w3-padding-32 w3-margin-top">
