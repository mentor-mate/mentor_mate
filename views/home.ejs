<body class="w3-light-grey" background="">
<!-- <img src="/assets/nature_wallpaper.jpg" alt="Norway" style="width:100%"> -->

<!-- w3-content defines a container for fixed size centered content, 
and is wrapped around the whole page content, except for the footer in this example -->
<div class="w3-content" style="max-width:1400px">

<!-- Header -->
<header class="w3-container w3-center w3-padding-32"> 
  <h1><b>MENTOR MATE</b></h1>
  <p>Where students meet <span class="w3-tag">Teachers</span></p>
</header>

<!-- Grid -->
<div class="w3-row">
 <nav class="navbar navbar-inverse ">
      <div>
          <div class="navbar-header" >
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>                        
              </button>
          </div>
          <div class="collapse navbar-collapse" id="myNavbar">
              <ul class="nav navbar-nav">
                <li class="active"><a href="#"><i class="fa fa-home"></i></a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="fa fa-search"></i><span class="caret"></span></a>
                    <ul class="dropdown-menu">
                      <li><a href="#">student</a></li>
                      <li><a href="#">mentor</a></li>
                    </ul>
                </li>
                <li><a href="#"><i class="fa fa-envelope"></i></a></li>
                <li><a href="#"><i class="fa fa-angle-double-right"></i></a></li>
                <li><a href="#"><i class="fa fa-book"></i></a></li>

              </ul>
          </div>
        </div>
    </nav> 



<!-- Blog entries -->
<div class="w3-col l8 s12">
  <!-- Blog entry -->

  <% for(let i = 0 ; i < data.length ; i++){ %>
        <div class="w3-card-4 w3-margin w3-white">
        <!-- <img src="/w3images/woods.jpg" alt="Nature" style="width:100%"> -->
          <div class="w3-container">
            <h3>Q. <b><%= data[i].question %></b></h3>
            <%
              for(let k = 0 ; k < student_picture.length ; k++){
                if(student_picture[k].username == data[i].username){
            %>
                    <div class="col-sm-1"><img src="/assets/upload/<%= student_picture[k].picture %>" width = "30px" height = "30px"></div><div class="col-sm-1"><a href="/api/home/<%= data[i].username %>"><%= data[i].username %></a></div>
            <%  
                    break;
              }
            }
            %>
            <h5> <span class="w3-opacity">April 7, 2014</span></h5>
          </div>

          <div class="w3-container">
            <%
              for(let j = 0 ; j < mentor_picture.length ; j++){
                if(data[i].prof == mentor_picture[j]){
            %>      
                    <img src="/assets/upload/<%= mentor_picture[j].picture %>">
                    <h5>Answered by <span class="w3-opacity"><a href="/api/home/professor/<%= data[i].prof %>"> <%= data[i].prof %></span></a></h5>
                    <p><%= data[i].solution %></p>
            <%
              }
            }
            %>
            
            <div class="w3-row">
              <div class="w3-col m8 s12">
                <p><a href="/api/read/<%= data[i].id %>"><button  class="w3-button w3-padding-large w3-white w3-border"><b>READ MORE »</b></button></a></p>
              </div>
              <div class="w3-col m4 w3-hide-small">
                <% let count = 0;
                 for(let j = comments.length-1 ; j >= 0  ; j--){
                    if(comments[j].post_id == data[i].id){
                        count = count+1;
                    }
                 }%>
                <p><span class="w3-padding-large w3-right"><b>Comments  </b> <span class="w3-tag"><%= count %></span></span></p>
              </div>
            </div>
          </div>
        </div>
<% } %>
  
  <hr>

</div>

<!-- Introduction menu -->
<div class="w3-col l4">
  <!-- About Card -->
  <a href="/api/user/">
  <div class="w3-card w3-margin w3-margin-top">

  <img src="/assets/upload/<%= picture %>" style="width:100%">
    <div class="w3-container w3-white">
      <h4 id="user"><b><%= username %></b></h4>
      <p> I want to share my world with you.</p>
      <p><%= picture %></p>
    </div>
    <span class="w3-tag"><a href="/api/logout/">Logout</a></span>
  </div></a><hr>
  
  
<!-- END Introduction Menu -->
</div>

<!-- END GRID -->
</div><br>

<!-- END w3-content -->
</div>

<!-- Footer -->
<footer class="w3-container w3-dark-grey w3-padding-32 w3-margin-top">
  <!--<button class="w3-button w3-black w3-disabled w3-padding-large w3-margin-bottom">Previous</button>
  <button class="w3-button w3-black w3-padding-large w3-margin-bottom">Next »</button>-->
  <p align="center">Created by <a href="#" target="_blank">Abhi kamalia</a></p>
</footer>

</body>
</html>

